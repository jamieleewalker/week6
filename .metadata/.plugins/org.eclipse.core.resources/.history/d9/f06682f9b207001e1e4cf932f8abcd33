package week6;

class Deck {

    private List<Card> cards = new ArrayList<>();

    public Deck() {
        for (int i = 2; i <= 14; i++) {
            for (Suit suit : Suit.values()) {
                cards.add(new Card(i, suit.name()));
            }
        }
    }

    public void shuffle() {
        Collections.shuffle(cards);
    }

    public Card draw() {
        return cards.remove(0);
    }
}