package week6;

class Player {

    private String name;
    private List<Card> cards = new ArrayList<>();

    public Player(String name) {
        this.name = name;
    }

    public void addCard(Card card) {
        this.cards.add(card);
    }

    public Card playCard() {
        return this.cards.remove(0);
    }

    public boolean isOut() {
        return this.cards.isEmpty();
    }
}
