package week6;

import java.util.List;

public class Player {
	
	public boolean isOut() {
		  return this.cards.isEmpty();
		}

		public Card playCard() {
		  Card card = this.cards.remove(0);
		  return card;
		}
		
		public Player(String name) {
			  this.name = name;
			  this.cards = new ArrayList<>();
			}

			public void addCard(Card card) {
			  this.cards.add(card);
			}
	
	

}
